<h1>Listing folders</h1>

<table>
	<col width="110">
	<col width="150">
	<col width="100">
	<col width="75">
	<col width="50">
	<col width="40">
  <thead>
		<tr>
      <th>Name</th>
      <th>Description</th>
      <th>Folder type</th>
      <th>Folder</th>
      <th></th>
      <th></th>
			<th></th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.name %></td>
        <td><%= folder.description %></td>
        <td>
          <% if (folder.folder_type != nil) %>
             <%= folder.folder_type.name %>
          <% end %>
        </td>
        <td>
          <% if (folder.folder != nil) %>
            <%= folder.folder.name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', folder %></td>
        <td><%= link_to 'Edit', edit_folder_path(folder) %></td>
        <td><%= link_to 'Destroy', folder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Folder', new_folder_path %>
