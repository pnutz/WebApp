<%= form_for(@receipt) do |f| %>
  <% if @receipt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@receipt.errors.count, "error") %> prohibited this receipt from being saved:</h2>

      <ul>
      <% @receipt.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :total %><br>
    <%= f.text_field :total %>
  </div>
  <div class="field">
    <%= f.label :transaction_number %><br>
    <%= f.text_field :transaction_number %>
  </div>
  <div class="field">
    <%= f.label :purchase_type_id %><br>
    <%= f.collection_select :purchase_type_id, PurchaseType.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :folder_id %><br>
    <%= f.collection_select :folder_id, current_user.folders, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.label :vendor_id %><br>
    <%= f.collection_select :vendor_id, Vendor.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :currency_id %><br>
    <%= f.collection_select :currency_id, Currency.all, :id, :name, :include_blank => true %>
  </div>

  <h2>Receipt Items</h2>

  <div id="receipt_items">
    <%= f.fields_for :receipt_items do |builder| %>
      <%= render "item_fields", :f => builder %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
